{% extends 'base.html.twig' %}

{% block body %}

    <div class="map"  ></div>

    <div class="container-fluid">

        <div class="row">
            <div class="col-12 text-center">

            </div>
            </div>

        <div class="row">

            <div class="col-12 col-lg-9 ">
                <img src="https://i.pinimg.com/originals/a9/5f/aa/a95faacbd9c5d2cae5071a43241443a9.jpg" width="100%" height=100%" alt="">
                <div class="mapAsBackground constant-ratio" id="map">

                    {# for now, parameters in yml cannot be associative arrays,
                        so we were obliged to use an indexed one #}
                    <div style="position: absolute; top: {{ viewerPos[1] }}%; left: {{ viewerPos[0] }}%"
                        title="You are here!">

                    </div>

                    {% for element in attractionList %}
                        <div class=""
                                style="position: absolute;
                                top: {{ element.percentageY }}%; left: {{ element.percentageX }}%">
                            <img src="{{ element.imageUrl }}"
                                alt="{{ element.name }}, {{ element.shortDescription }}"
                                title="{{ element.name }}, {{ element.shortDescription }}"
                            >
                        </div>

                    {% endfor %}
                </div>

            </div>


            <div class="col-12 col-lg-3">
                {% include 'selectPanel.html.twig' %}
            </div>
        </div>

        <div class="col-12 text-center">


        </div>

    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/map.css">
{% endblock %}
